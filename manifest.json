{
  "manifest_version": 2,
  "name": "Disable HLTV forums",
  "version": "1.0",
  "description": "Disable HLTV forums extension for Firefox",
  "icons": {
    "48": "icons/cancel-48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.hltv.org/*"],
      "js": ["background.js"]
    }
  ]
}